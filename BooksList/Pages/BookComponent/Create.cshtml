@page
@model BooksList.Pages.BookComponent.CreateModel

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info text-center">Add New Book</h2>
<br />
<div class="container">
 
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Author" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">

            <div class="col-4">
                <label asp-for="Book.ISBN13" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN13" class="form-control" />
                <span asp-validation-for="Book.ISBN13" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-page="Index" class="btn btn-outline-info">Back to Books List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
